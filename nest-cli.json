{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/inventario-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/inventario-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/inventario-backend",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "ms-administracion": {
      "type": "application",
      "root": "apps/ms-administracion",
      "entryFile": "main",
      "sourceRoot": "apps/ms-administracion/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-administracion/tsconfig.app.json"
      }
    },
    "ms-inventario": {
      "type": "application",
      "root": "apps/ms-inventario",
      "entryFile": "main",
      "sourceRoot": "apps/ms-inventario/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-inventario/tsconfig.app.json"
      }
    },
    "ms-ventas": {
      "type": "application",
      "root": "apps/ms-ventas",
      "entryFile": "main",
      "sourceRoot": "apps/ms-ventas/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-ventas/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}